<div class="custom-container d-flex justify-content-center">
  <div class="row align-items-center">
  <h1 class="fw-bold">Souhaitez-vous ajouter quelque chose d'autre ?</h1>
  <%= simple_form_for @question do |f| %>
    <div class="col-auto pt-2">
      <%= f.input :content, label: false, input_html: { class: 'input-space enhanceai' }, placeholder: "Je veux consumer moins d'electricite, ..." %>
    </div>
    <div class="col-auto pt-4">
      <%= f.submit "Rechercher", class: "send-button" %>
    </div>
    <% end %>
    </div>
  </div>
</div>
